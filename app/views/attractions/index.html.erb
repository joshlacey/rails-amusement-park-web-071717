<ul>
<% @attractions.each do |a| %>
  <li>
    <% if current_user.admin %>
      <%= link_to "Show #{a.name}" , attraction_path(a) %>
    <% else %>
      <%= link_to "Go on #{a.name}" , attraction_path(a) %>
    <% end %>
  </li>
<% end %>
</ul>

<% if current_user.admin %><%= link_to "New Attraction", new_attraction_path %><% end %>
